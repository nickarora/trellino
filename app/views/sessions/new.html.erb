<div class='log-in'>
	<div class='logo'>trellino</div>
	<button class="btn btn-success form-control guesttour">Guest Tour</button>
	<button class="btn btn-success form-control signup">Sign Up</button>
	<button class="btn btn-success form-control signin">Sign In</button>

	<form class='manual-login' action="/session" method="post">
	  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	  
	  <div class='form-group'>
	  <label>Email</label>
	  <input id='email' name="user[email]" type="text" class='form-control'>
	  </div>

	  <div class='form-group'>
	  <label>Password</label>
	  <input id='password' name="user[password]" type="password" class='form-control'>
	  </div>

	  <div class='form-group'>
	  <button class="btn btn-success form-control login-button">Submit</button>
		</div>
	</form>
	
</div>

<script>
	$('.signin').click(function(){
		$('.manual-login').show('blind', 500);
	});

	$('.guesttour').click(function(){
		$email = $('#email');
		$password = $('#password');
		$submitButton = $('.login-button');

		$email.val('ripe@gmail.com');
		$password.val('password');
		$submitButton.click();
	});

	$('.signup').click(function(){
		window.location.href="/users/new"; 
	});

</script>
